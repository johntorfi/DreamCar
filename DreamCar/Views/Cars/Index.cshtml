@model IEnumerable<DreamCar.Models.Car>
<meta charset="utf-8" />
<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
@{
    ViewBag.Title = "Index";
}

<h2 class="text-center" style="font-family:'Abel'">Car Database</h2>
<br />
<p style="float:right">
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm())
    {
    <p>
        Make: @Html.DropDownList("Make", "All")
        &nbsp &nbsp Name: @Html.TextBox("SearchString")
        &nbsp &nbsp Cut-off Model: @Html.TextBox("Model")
        &nbsp &nbsp Alphabetise: <input id="isChecked" type="checkbox" name="isChecked" value="on" style="vertical-align:middle" />
        &nbsp &nbsp &nbsp<input type="submit" value="Filter" />
    </p>
    }
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Engine)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Html.DisplayFor(model => item.ImageUrl)" width="240px" height="130px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Engine)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
